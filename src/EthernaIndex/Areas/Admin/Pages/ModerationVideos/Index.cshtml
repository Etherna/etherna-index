@page
@model Etherna.EthernaIndex.Areas.Admin.Pages.ModerationVideos.IndexModel
@{
    ViewData["Title"] = "Video Moderation Reports";

    var pageSelectorModel = new PageSelectorModel(Model.CurrentPage, (int)Model.MaxPage);
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color: #f2f2f2;
    }

    .video-id {
        width: 20%;
    }

    .total-reports {
        width: 10%;
    }

    .last-report {
        width: 20%;
    }

    .title {
        width: 35%;
    }
</style>

<div class="row">
    <div class="col-12 mb-3 text-center mt-1">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<form method="get"
      asp-route-p="@Model.CurrentPage">

    <div class="form-row">
        <div class="col-4 mb-3">
            <input id="VideoId" name="VideoId" type="text" placeholder="video id" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="col-12 mb-3">
            <input type="submit" class="btn btn-primary" value="Find" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-4 mb-3">
            <span>@Model.ErrorMessage</span>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th class="video-id">Video Id</th>
                        <th class="total-reports">Total Reports</th>
                        <th class="last-report">Last Report Received</th>
                        <th class="title">Title</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var videoReport in Model.VideoUnsuitableReports)
                    {
                        <tr>
                            <td class="align-middle">
                                <a class="btn btn-primary" asp-page="../Videos/Index" asp-route-videoId="@videoReport.VideoId">Manage</a>
                            </td>
                            <td class="align-middle video-id">@videoReport.VideoId</td>
                            <td class="align-middle total-reports">@videoReport.TotalReports</td>
                            <td class="align-middle last-report">@videoReport.CreationDateTime</td>
                            <td class="align-middle title">@videoReport.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <partial name="_PageSelector" model="pageSelectorModel" />
    </div>
</div>