@page
@using static Etherna.EthernaIndex.Areas.Admin.Pages.UnsuitableVideoReports.UnsuitableReportModel;
@model Etherna.EthernaIndex.Areas.Admin.Pages.UnsuitableVideoReports.UnsuitableReportModel
@{
    ViewData["Title"] = Model.VideoReport.Title;

    var pageSelectorModel = new PageSelectorModel(Model.CurrentPage, (int)Model.MaxPage, routeData: Model.CustomRouteData);
}

<div class="row">
    <div class="col-12 mb-3 text-center mt-1">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<form id="client-form" Method="post">
    <div class="form-row">
        <div class="col-12 mb-3">
            <input type="hidden" asp-for="VideoReport.VideoId" name="VideoId" />
            <input type="submit" asp-page-handler="ApproveVideo" class="btn btn-primary" value="Approve Video" name="button" />
            <input type="submit" asp-page-handler="RejectVideo" class="btn btn-primary" value="Reject Video" name="button" />
        </div>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>History</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var videoReport in Model.VideoReport.DetailReports)
                    {
                        <tr>
                            @if (@videoReport.DetailType == VideoReportDto.UnsuitableReportDetailType.ReportVideo)
                            {
                                <td class="align-middle">@videoReport.Date <b>User:</b> @videoReport.Address <b>Reported:</b> @videoReport.Description</td>
                            }
                            else
                            {
                                <td class="align-middle">@videoReport.Date <b>User</b> @videoReport.Address <b>Review:</b> @(videoReport.IsValid ? "Accepted" : "Rejected") <b>Motivation:</b> @videoReport.Description</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <partial name="_PageSelector" model="pageSelectorModel" asp-route-videoId="@Model.VideoReport.VideoId" />
    </div>
</div>
