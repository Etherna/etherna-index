@page
@model Etherna.EthernaIndex.Areas.Admin.Pages.UnsuitableVideoReports.HistoryModel
@{
    ViewData["Title"] = Model.VideoReview.Title;

    var pageSelectorModel = new PageSelectorModel(Model.CurrentPage, (int)Model.MaxPage, routeData: Model.CustomRouteData);
}

<div class="row">
    <div class="col-12 mb-3 text-center mt-1">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Content Review</th>
                        <th>Description</th>
                        <th>Reporter Address</th>
                        <th>Report Date</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var videoReport in Model.DetailReports)
                    {
                    <tr>
                        <td class="align-middle">@videoReport.IsValid</td>
                        <td class="align-middle">@videoReport.Description</td>
                        <td class="align-middle">@videoReport.ReviewAddress</td>
                        <td class="align-middle">@videoReport.ReviewDate</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <partial name="_PageSelector" model="pageSelectorModel" />
    </div>
</div>

<a class="btn btn-primary" asp-page="UnsuitableReport" asp-route-videoId="@Model.VideoReview.VideoId">Back</a>
