<ul class="navbar-nav">
    @if (User?.Identity.IsAuthenticated == true)
    {
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Account" asp-page="/Logout" title="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Account" asp-page="/Login" title="Login">Login</a>
        </li>
    }
</ul>
